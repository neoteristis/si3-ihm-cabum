<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <org.osmdroid.views.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/navbar_fragment"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:layout_marginBottom="613dp"
        android:focusable="true"
        android:clickable="true"
        android:contentDescription="location"
        android:backgroundTint="#E4DCCF"
        android:src="@drawable/ic_my_location_24"
        app:layout_constraintBottom_toTopOf="@+id/navbar_fragment"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tabAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:paddingTop="8dp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/add_button"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="invisible"
        >

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/accident"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"

            android:backgroundTint="#E4DCCF"
            android:clickable="true"
            android:focusable="true"
            android:tint="@color/red"
            android:layout_marginTop="8dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/incident"
            app:srcCompat="@drawable/ic_accident" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/incident"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:backgroundTint="#E4DCCF"
            android:clickable="true"
            android:contentDescription="add"
            android:focusable="true"
            android:src="@drawable/ic_incident"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:focusable="true"
        android:clickable="true"
        android:layout_marginBottom="613dp"
        android:backgroundTint="#E4DCCF"
        android:src="@drawable/ic_add_24"
        app:layout_constraintBottom_toTopOf="@+id/navbar_fragment"
        app:layout_constraintEnd_toEndOf="parent" />

    <fragment
        android:visibility="invisible"
        android:id="@+id/accident_info"
        android:name="com.example.ihm_cabum.ui.home.AccidentInfo"
        android:layout_width="300dp"
        android:layout_height="400dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/fragment_accident_info" />

    <fragment
        android:id="@+id/navbar_fragment"
        android:name="com.example.ihm_cabum.ui.navbar.NavbarFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout="@layout/fragment_navbar" />

</androidx.constraintlayout.widget.ConstraintLayout>